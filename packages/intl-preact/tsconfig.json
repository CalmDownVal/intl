{
	"compilerOptions": {
		"charset": "utf8",
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": [
			"DOM",
			"ESNext"
		],
		"module": "ESNext",
		"moduleResolution": "Node",
		"newLine": "lf",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": []
	},
	"include": [
		"./src/**/*"
	]
}
